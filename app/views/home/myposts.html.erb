<head>
<style>
th, td {
  padding: 10px;
}
</style>
</head>
<h1>My Posts</h1>

<table class="table table-hover">
	<thead>
   	<tr>
      <th>Image</th>
      <th>Title</th>
      <th>Posted</th>
      <th>Votes</th>
      <th colspan="3"></th>
    </tr>
	</thead>
  <tbody>
  	<% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image.url(:thumb), :class => 'img-responsive' %></td>
        <td><%= post.title %></td>
        <td><%= post.postdate.strftime('%b %d, %Y') %></td>
        <td>+<%= post.upvotecount %>, -<%= post.downvotecount %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>