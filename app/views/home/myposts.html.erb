<table>
	<thead>
    	<tr>
    		<th>Title</th>
      		<th>Image</th>
      		<th>Posted</th>
      		<th>Upvotes</th>
      		<th>Downvotes</th>
      		<th colspan="3"></th>
		</tr>
  		</thead>

  	<tbody>
    	<% @posts.each do |post| %>
      		<tr>
        		<td><%= post.title %></td>
        		<td><%= image_tag post.image.url(:thumb) %></td>
        		<td><%= post.postdate %></td>
        		<td><%= post.upvotecount %></td>
        		<td><%= post.downvotecount %></td>
        		<td><%= link_to 'Show', post, class: 'btn btn-default' %></td>
      		</tr>
    	<% end %>
  	</tbody>
</table>